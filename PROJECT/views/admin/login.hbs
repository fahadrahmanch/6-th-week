
  <div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4" style="width: 100%; max-width: 400px;">
      <form action="/admin/login" method="post" onsubmit="login(event)">
        <h2 class="text-center mb-4"><span>Admin</span> Login</h2>
        
        <input type="text" id="message" value="{{{message}}}" name="message" hidden>
        
        <div class="form-group mb-3">
          <input type="text" id="email" name="email" placeholder="Username" class="form-control">
          <small id="email_error" class="text-danger"></small>
        </div>
        
        <div class="form-group mb-4"> 
          <input type="password" id="password" name="password" placeholder="Password" class="form-control">
          <small id="password_error" class="text-danger"></small>
        </div>
        
        <button type="submit" class="btn btn-primary btn-block mb-3">Log in</button> 
      </form>
    </div>
</div>

   <script>
  let email=document.getElementById('email')
  let password=document.getElementById('password')
  let email_error=document.getElementById("email_error")
  let pattern = /^[a-zA-Z0-9+_.-]+@[a-zA-Z0-9.-]+$/;
  let password_error=document.getElementById("password_error")

  function login(event){
    
    if(email.value.trim()==''||email.value.trim()==null){
      email_error.innerHTML='email is required'
       event.preventDefault();
      
    }else if(!(pattern.test(email.value.trim()))){
      email_error.innerHTML='enter a valid email'
      event.preventDefault();
      
    }else{
      email_error.innerHTML=''
    }
    if(password.value.trim()==''||password.value.trim()==null){
      password_error.innerHTML='password is required';
      event.preventDefault();
      
    }else if(password.value.length<8){
      password_error.innerHTML='Password must be at least 8 characters long.'
       event.preventDefault();
      
    }else{
      password_error.innerHTML=''
    }
    
  }
    const message=document.getElementById('message').value;
    if(message){
      Swal.fire(message)
    }
   </script>
   