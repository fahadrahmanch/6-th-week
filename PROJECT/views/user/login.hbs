
    <main class="d-flex justify-content-center align-items-center vh-100">
  <div class="card p-4" style="width: 100%; max-width: 400px;">
    <form method="post" action="/user/login" onsubmit="log(event)">
      <input type="text" id="message" value="{{{message}}}" name="message" hidden>

      <h2 class="text-center mb-4">Login</h2>

      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="text" id="email" placeholder="Enter Email" name="email" class="form-control">
        <span id="email_error" class="text-danger"></span>
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" id="password" placeholder="Enter Password" name="password" class="form-control">
        <span id="password_error" class="text-danger"></span>
      </div>

      <button type="submit" class="btn btn-primary w-100">Sign in</button>

      <div class="mt-3 text-center">
        <a href="/user/register">Do not have an account?</a>
      </div>
    </form>
  </div>
</main>

    <script>
  let email=document.getElementById('email')
  let password=document.getElementById('password')
  let email_error=document.getElementById("email_error")
  let pattern = /^[a-zA-Z0-9+_.-]+@[a-zA-Z0-9.-]+$/;
  let password_error=document.getElementById("password_error")

  function log(event){
    
    if(email.value.trim()==''||email.value.trim()==null){
      email_error.innerHTML='email is required'
       event.preventDefault();
      
    }else if(!(pattern.test(email.value.trim()))){
      email_error.innerHTML='enter a valid email'
      event.preventDefault();
      
    }else{
      email_error.innerHTML=''
    }
    if(password.value.trim()==''||password.value.trim()==null){
      password_error.innerHTML='password is required';
      event.preventDefault();
      
    }else if(password.value.length<8){
      password_error.innerHTML='Password must be at least 8 characters long.'
       event.preventDefault();
      
    }else{
      password_error.innerHTML=''
    }
    
  }
  
      const message=document.getElementById('message').value;
      if(message){
        Swal.fire(message);

      }
    </script>
  